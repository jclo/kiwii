/* global */
/* eslint one-var: 0 */

// -- Vendor modules
/* eslint-disable import/no-extraneous-dependencies, import/no-unresolved */
const $        = require('zepto')
    , Backbone = require('backbone')
    , _        = require('lodash')
    ;
/* eslint-enable import/no-extraneous-dependencies, import/no-unresolved */

// -- Project Modules
const template = require('../templates/@#project#@.hbs')
    ;

// -- Variables

// -- Main section
module.exports = Backbone.View.extend({
  el: '.content',

  events: {
    'click #moduleID .add': 'addTo...',
    'click #moduleID .remove': 'removeTo...',
  },

  initialize() {
    // Fixes loss of context for 'this' within methods.
    _.bindAll(this, 'render');
    // Not all views are self-rendering. This one is.
    this.render();
  },

  render() {
    // Prints the Handlebars template.
    $(this.el).html(template({ title: 'Module Settings' }));
  },
});
