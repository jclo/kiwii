{
  "name": "kiwii",
  "version": "0.2.2",
  "description": "Kiwii is a lightweight HTML5 Hybrid Mobile App framework",
  "main": "index.js",
  "bin": {
    "kiwii": "./bin/kiwii.js"
  },
  "scripts": {
    "build_dist": "gulp build",
    "update_dist": "gulp watch",
    "browser": "kiwii run browser",
    "postinstall": "bower install",
    "build": "BROWSERIFYSWAP_ENV='dist' browserify public/js/app.js -o public/js/wapp.js -d --exclude jquery",
    "watch": "BROWSERIFYSWAP_ENV='dist' watchify public/js/app.js -o public/js/wapp.js -dv --exclude jquery"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/kiwii.git"
  },
  "keywords": [
    "hybrid mobile",
    "template",
    "cordova",
    "backbone",
    "es6",
    "babel",
    "browserify",
    "ios"
  ],
  "author": "jclo <jclo@mobilabs.fr> (http://www.mobilabs.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/kiwii/issues"
  },
  "homepage": "https://github.com/jclo/kiwii",
  "dependencies": {
    "backbone": "1.3.3",
    "backbone.radio": "2.0.0",
    "bower": "1.8.0",
    "express": "4.14.0",
    "font-awesome": "4.7.0",
    "handlebars": "4.0.6",
    "lodash": "4.17.2",
    "nopt": "3.0.6",
    "open": "0.0.5"
  },
  "devDependencies": {
    "babel-preset-latest": "6.16.0",
    "babelify": "7.3.0",
    "browserify": "13.1.1",
    "browserify-shim": "3.8.12",
    "browserify-swap": "0.2.2",
    "del": "2.2.2",
    "eslint": "3.11.1",
    "eslint-config-airbnb-base": "10.0.1",
    "eslint-plugin-import": "2.2.0",
    "ghooks": "1.3.2",
    "gulp": "3.9.1",
    "gulp-clean-css": "2.2.1",
    "gulp-concat": "2.6.1",
    "gulp-header": "1.8.8",
    "gulp-rename": "1.2.2",
    "gulp-replace": "0.5.4",
    "gulp-sourcemaps": "2.2.1",
    "gulp-uglify": "2.0.0",
    "gulp-util": "3.0.7",
    "hbsfy": "2.7.0",
    "path": "0.12.7",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0",
    "watchify": "3.7.0"
  },
  "browser": {
    "zepto": "./bower_components/zepto/zepto.min.js",
    "ratchet": "./bower_components/ratchet/dist/js/ratchet.js"
  },
  "browserify-shim": {
    "zepto": "$",
    "ratchet": {
      "exports": "Ratchet"
    }
  },
  "browserify-swap": {
    "@packages": [
      "underscore"
    ],
    "dist": {
      "underscore.js$": "lodash"
    }
  },
  "browserify": {
    "transform": [
      ["babelify", { "presets": ["latest"] }],
      "browserify-shim",
      "browserify-swap",
      "hbsfy"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build"
    }
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
